            label = "LSHIFT_TAP";
            bindings = <&kp>, <&kp>;

            #binding-cells = <2>;
            flavor = "tap-preferred";
            tapping-term-ms = <200>;
            hold-trigger-key-positions = <9 8 6 7 18 31 20 19 10 22 34 32 21 30 33 39 40 41>;
        };

        rst: rshift_tap {
            compatible = "zmk,behavior-hold-tap";
